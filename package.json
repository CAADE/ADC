{
  "name": "adc",
  "private": true,
  "version": "0.0.0",
  "description": "Automotive Data Center Sails application",
  "keywords": [],
  "dependencies": {
    "async": "^2.6.2",
    "eslint": "^5.16.0",
    "grunt": "^1.0.4",
    "html-pdf": "^2.2.0",
    "lodash": "^4.17.11",
    "mocha": "^4.1.0",
    "mocha-jenkins-reporter": "^0.4.1",
    "sails": "^1.1.0",
    "sails-generate-bouquet": "^1.4.0",
    "sails-generate-bouquet-action": "^1.4.0",
    "sails-generate-bouquet-actor": "^1.4.0",
    "sails-generate-bouquet-scenario": "^1.4.0",
    "sails-generate-bouquet-subsystem": "^1.4.0",
    "sails-generate-bouquet-tests": "^1.2.0",
    "sails-generate-bouquet-usecase": "^1.4.0",
    "sails-generate-bouquet-uservice": "^1.4.0",
    "sails-hook-grunt": "^3.1.0",
    "sails-hook-orm": "^2.1.1",
    "sails-hook-sockets": "^1.5.5"
  },
  "devDependencies": {},
  "scripts": {
    "start": "node app.js",
    "test": "npm update && npm run lint && npm run custom-tests && echo 'Done.'",
    "lint": "node ./node_modules/eslint/bin/eslint . --max-warnings=0 && echo 'âœ”  Your code looks good.'",
    "design": "java -jar docs/plantuml.jar docs/*.puml docs/**/*.puml",
    "custom-tests": "JUNIT_REPORT_PATH=./report.xml node ./node_modules/mocha/bin/mocha --reporter mocha-jenkins-reporter test/bootstrap.test.js test/**/*.test.js",
    "unit-tests": "node ./node_modules/mocha/bin/mocha test/lifecycle.test.js test/**/*.test.js",
    "build": "npm update && node ./deploy/build build",
    "publish": "node ./deploy/build publish",
    "build-doc": "npm run design && node ./deploy/build-doc",
    "debug": "node debug app.js",
    "deploy-apps": "node ./deploy/build deploy",
    "deploy": "npm run-script deploy-apps && docker stack deploy --compose-file=./deploy/docker-compose-dev.yaml ADCDev",
    "deploy-test": "env && cd deploy && docker stack deploy --compose-file=./test/docker-compose.yaml ADCTest",
    "teardown-test": "docker stack rm ADCTest",
    "deploy-prod": "npm run-script deploy-apps && docker stack deploy --compose-file=./deploy/docker-compose-prod.yaml adc"
  },
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/anonymous node/sails user/adc.git"
  },
  "author": "Darren Pulsipher",
  "license": "MIT"
}
